# Storage Analytics Backend Configuration

# =============================================================================
# DATA PATHS (Environment-Aware)
# =============================================================================

# Data Root Path (AUTO-DETECTED if not set)
# The system will automatically detect:
#   - On local Mac: /Volumes/cil (if mounted)
#   - On cluster: /project/cil
#   - Development: current directory
#
# Only set this if you want to override auto-detection:
# DATA_ROOT_PATH=/custom/path/to/data

# Snapshots Path
# Can be:
#   - Relative path (resolved against DATA_ROOT_PATH or backend directory)
#   - Absolute path (used as-is)
#
# Examples:
#   Local dev:  data/snapshots  (uses backend/data/snapshots)
#   Cluster:    /project/cil/home_dirs/scadavidsanchez/projects/cil-rcc-storage-tracker/backend/data/snapshots
#   Relative:   home_dirs/scadavidsanchez/projects/cil-rcc-storage-tracker/backend/data/snapshots
SNAPSHOTS_PATH="data/snapshots"

# Database Path (relative to backend directory or absolute)
DUCKDB_PATH="data/storage_analytics.duckdb"

# =============================================================================
# API SETTINGS
# =============================================================================

API_TITLE="Storage Analytics API"
API_VERSION="1.0.0"
DEBUG=false

# Redis Settings
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=true
REDIS_TTL_DEFAULT=3600
REDIS_TTL_SNAPSHOTS=86400
REDIS_TTL_SEARCH=3600
REDIS_TTL_FOLDERS=7200

# Query Settings
DEFAULT_SEARCH_LIMIT=1000
MAX_SEARCH_LIMIT=10000
DEFAULT_HEAVY_FILES_LIMIT=100
MAX_HEAVY_FILES_LIMIT=1000

# Performance Settings
QUERY_TIMEOUT=30
MAX_WORKERS=4

# CORS Settings (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
