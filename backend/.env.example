# Storage Analytics Backend Configuration

# API Settings
API_TITLE="Storage Analytics API"
API_VERSION="1.0.0"
DEBUG=false

# Database Settings
DUCKDB_PATH="data/storage_analytics.duckdb"
SNAPSHOTS_PATH="data/snapshots"

# Redis Settings
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=true
REDIS_TTL_DEFAULT=3600
REDIS_TTL_SNAPSHOTS=86400
REDIS_TTL_SEARCH=3600
REDIS_TTL_FOLDERS=7200

# Query Settings
DEFAULT_SEARCH_LIMIT=1000
MAX_SEARCH_LIMIT=10000
DEFAULT_HEAVY_FILES_LIMIT=100
MAX_HEAVY_FILES_LIMIT=1000

# Performance Settings
QUERY_TIMEOUT=30
MAX_WORKERS=4

# CORS Settings (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
